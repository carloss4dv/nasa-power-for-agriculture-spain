{
  "name": "nasa-power-api-client",
  "version": "1.0.0",
  "description": "Cliente TypeScript para la API NASA POWER enfocado en datos meteorológicos de España",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "example": "npx ts-node ejemplos/nasa-power-ejemplo.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "nasa",
    "power",
    "api",
    "meteorología",
    "clima",
    "españa"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^20.10.5",
    "axios": "^1.6.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
